<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Efaisa</title>
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet"> 
	<script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="./css/estilos.css">
	<link rel="stylesheet" href="../public/js/main.js">	
</head>
<body>
	
	<div class="contenedor">
		<nav>
			<a class="logotipo" href="#">Efaisa</a>
		
				<a href="#">EFAISA</a>
				<a href="#">Alertas</a>
				<button class="switch" id="switch">
					<span><i class="fas fa-sun"></i></span>
					<span><i class="fas fa-moon"></i></span>
				</button>
			</div>
		</nav>
		<section>
			<section class="grid">
				<% Zonas.forEach(function(Zonas) { %>			
					<div class="card2">
						<p><%= Zonas.Zona %></p>
						<div class="botones">
							<a onclick="Dato('<%= Zonas.Zona %>','<%= Zonas.Estado %>')" class="boton primario"> Ver </a>
							<a href="#" class="boton secundario">Reiniciar</a>
						</div>
					</div>

				<% }); %>
		</section>
	</div>
	<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script >
		function Dato(Zona,Estado){	
			actualizador();
			var E="";
			if(Estado=="well"){
			E="Estado de la zona es bueno";
			Swal.fire({
  				title: Zona,
 			 	text: E,
				  icon: 'success',

 		 confirmButtonText: 'Cool'
			})	
		}	else if(Estado=="warnings")	{
			E="Alerta en la zona";
		Swal.fire({
  				title: Zona,
 			 	text: E,
				  icon: 'error',

 		 confirmButtonText: 'Cool'
			
		})
		}else if(Estado=="error"){

			E="Zona con errores";
			Swal.fire({
  				title: Zona,
 			 	text: E,
				  icon: 'question',

 		 confirmButtonText: 'Cool'
		})
		}
	}


	</script>
	<script>
		const btnSwitch = document.querySelector('#switch');

btnSwitch.addEventListener('click', () => {
	document.body.classList.toggle('dark');
	//btnSwitch.classList.toggle('active');
	document.body.grid
});
	</script>
</body>
</html>